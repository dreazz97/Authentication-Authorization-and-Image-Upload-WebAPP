<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LoginPage</title>
</head>
<style>
    .container {
        padding-left: 40%;
        padding-right: 40%;
        padding-top: 10%;
    }
</style>
<body>
    <div class="container">
        <h1>Login</h1>

        <form method="post">
            <h4>Email</h4>
            <input type="text" name="email">
            <h4>Password</h4>
            <input type="password" name="password"><br>
            <input id="submit_login" type="submit">
            <p id="error_message"></p>
            <h2>Don't have an account? Register Here</h2>
            <a href="/user/register">Register</a>
        </form>
        <script>
            var errormessage = document.querySelector('#error_message');
            const myKeysValues = window.location.search;
            if (myKeysValues == '?Invalid%20email%20or%20password'){
                errormessage.innerHTML = "Invalid email or password"
            }else if (myKeysValues == '?User%20not%20registered'){
                errormessage.innerHTML = "User not registered"
            }
        </script>
    </div>
</body>
</html>