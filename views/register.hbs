<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RegisterPage</title>
</head>
<style>
    .container {
        padding-left: 40%;
        padding-right: 40%;
        padding-top: 7%;
    }
</style>
<body>
    <div class="container">
        <h1>Register</h1>

        
        <form method="post">
            <h4>Name</h4>
            <input type="text" name="name">
            <h4>Email</h4>
            <input type="text" name="email">
            <h4>Password</h4>
            <input type="password" name="password">
            <h4>Confirm Password</h4>
            <input type="password" name="password2"><br>
            <p id="error_message"></p>
            <input type="submit">
        </form>
    </div>
            <script>
            var errormessage = document.querySelector('#error_message');
            const myKeysValues = window.location.search;
            if (myKeysValues == '?All%20fields%20are%20required'){
                errormessage.innerHTML = "All fields are required"
            }else if (myKeysValues == '?Invalid%20email'){
                errormessage.innerHTML = "Invalid Email"
            }else if(myKeysValues == '?Password%20length%20must%20be%20at%20least%206%20characters'){
                errormessage.innerHTML = "Password length must be at least 6 characters"
            }
            else if(myKeysValues == '?User%20already%20exists'){
                errormessage.innerHTML = "The user already exists"
            }
        </script>
</body>
</html>